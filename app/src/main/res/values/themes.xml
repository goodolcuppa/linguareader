<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme with action bar -->
    <style name="Base.Theme.Linguareader" parent="Theme.MaterialComponents.DayNight.Bridge">

    </style>

    <!-- Theme without action bar -->
    <style name="Base.Theme.Linguareader.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

    </style>

    <style name="Base.Theme.Linguareader.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Linguareader.Login</item>
    </style>

    <!-- Used for primary buttons -->
    <style name="AppTheme.Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <!-- Used for secondary (outlined) buttons -->
    <style name="AppTheme.Button.Secondary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tint">?attr/colorSecondary</item>
    </style>

    <!-- Used for tertiary (borderless) buttons -->
    <style name="AppTheme.Button.Tertiary" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <!-- Used for floating action buttons buttons -->
    <style name="AppTheme.FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>