<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="270dp"
    android:layout_weight="1.0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/colorPrimary"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_language"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:paddingHorizontal="4dp"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="?attr/colorOnSecondary"
                android:background="@drawable/text_language"/>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardBackgroundColor="?attr/color"-->
<!--                app:cardCornerRadius="4dp">-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="28dp"-->
<!--                    android:text="@string/all"-->
<!--                    android:gravity="center"-->
<!--                    android:paddingHorizontal="10dp"/>-->

<!--            </androidx.cardview.widget.CardView>-->

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"/>

            <ImageButton
                android:id="@+id/btn_delete_deck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/delete"
                android:src="@drawable/ic_delete"
                android:background="@drawable/button_primary"
                android:padding="6dp"
                android:backgroundTint="@color/red"
                android:layout_gravity="end"
                android:visibility="invisible"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:src="@drawable/ic_decks"
            app:tint="?android:attr/windowBackground"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/default_deck"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_cards"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_gravity="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>