<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".UserPreferences"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:theme="@style/Base.Theme.Linguareader">
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.Linguareader.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_home"
            android:theme="@style/Base.Theme.Linguareader">
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Linguareader.Login">
        </activity>
        <activity
            android:name=".ui.reading.ReadActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Linguareader">
        </activity>
        <activity
            android:name=".StudyActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Linguareader">
        </activity>
        <activity
            android:name=".UpgradeActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.Linguareader">
        </activity>

    </application>

</manifest>